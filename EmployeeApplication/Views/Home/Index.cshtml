
@{
    Layout = "_Layout";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1>Welcome to Employee Application</h1>
        <p class="lead text-muted">
            This application is to display and manage the employee details
            and store the details of employees in database and retrieve the
            data from database
        </p>
        <p>
            <a href="#" class="btn btn-primary my-2">Search Employees</a>
        </p>
    </div>
</section>

@*@model IEnumerable<EmployeeApplication.Models.EmployeeModel>*@
@using EmployeeApplication.Models
@model IEnumerable<EmployeeModel>

    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                @foreach (var employee in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"></svg>
                            <div class="card-body">
                                <p class="card-text">
                                    @employee.Description
                                </p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", "Employee", new { id = employee.Id })" class="btn btn-sm btn-outline-secondary">View Details</a>
                                    </div>
                                    <small class="text-muted">@employee.Name</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>



 