@{
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="mb-4">Contact Us</h1>

    <div class="row">
        <div class="col-md-6">
            <h4>Contact Form</h4>
            <form>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Stalin S" required>
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="stalin.sangeethraj@gmail.com" required>
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" rows="5" placeholder="Just chill!! we are here for you!!" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>

        <div class="col-md-6">
            <h4>Our Contact Information</h4>
            <p><strong>Address:</strong> 1234 Main Street, Hometown, ABC</p>
            <p><strong>Phone:</strong> (123) 456-7890</p>
            <p><strong>Email:</strong> contact@yourdomain.com</p>

            <h5 class="mt-4">Our Location</h5>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.581383930721!2d-122.08424938468199!3d37.42199977982561!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fb56bb72bbd3f%3A0xdeadbeefdeadbeef!2sGoogleplex!5e0!3m2!1sen!2sus!4v1624539657025!5m2!1sen!2sus" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>
