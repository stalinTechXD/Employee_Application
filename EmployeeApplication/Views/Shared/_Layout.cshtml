<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee Application</title>
    <link href="~/css/Site.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/logo.jpg" width="30" height="30" alt="Logo" />
                    Employee Application
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                  <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/home/aboutus">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/home/contactus">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/employee/getemployees">All Employees</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/employee/addemployee">Add New Employee</a>
                      </ul>

      
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top card-footer text-muted text-center">
        <div class="container">
            Copyright &copy; Employee Application @DateTime.Now.Year
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    @RenderSection("scripts" , required:false)
</body>
</html>
